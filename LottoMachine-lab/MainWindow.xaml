<Window
    x:Class="LottoMachine_lab.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LottoMachine_lab"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Lottomaskinen"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Background="#e6f0ff">
        <Grid
          Width="500"
          Margin="16"
          Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  Rubrik  -->
                <RowDefinition Height="Auto" />
                <!--  TextBoxar  -->
                <RowDefinition Height="Auto" />
                <!--  Knappar  -->
                <RowDefinition Height="*" />
                <!--  Resultat  -->
            </Grid.RowDefinitions>

            <!--  Rubrik  -->
            <TextBlock
              Margin="0,0,0,12"
              FontSize="16"
              FontWeight="Bold"
              Text="Mata in dina 7 lottotal (1–35)" />

            <!--  Inmatningsfält  -->
            <UniformGrid
              Grid.Row="1"
              Margin="0,0,0,12"
              Columns="7"
              Rows="1">
                <TextBox
                  x:Name="txt1"
                  Width="50"
                  Height="50"
                  Margin="0,4,4,4"
                  HorizontalContentAlignment="Center"
                  VerticalContentAlignment="Center"
                  FontSize="16" />
                <TextBox
                  x:Name="txt2"
                  Width="50"
                  Height="50"
                  Margin="4"
                  HorizontalContentAlignment="Center"
                  VerticalContentAlignment="Center"
                  FontSize="16" />
                <TextBox
                  x:Name="txt3"
                  Width="50"
                  Height="50"
                  Margin="4"
                  HorizontalContentAlignment="Center"
                  VerticalContentAlignment="Center"
                  FontSize="16" />
                <TextBox
                  x:Name="txt4"
                  Width="50"
                  Height="50"
                  Margin="4"
                  HorizontalContentAlignment="Center"
                  VerticalContentAlignment="Center"
                  FontSize="16" />
                <TextBox
                  x:Name="txt5"
                  Width="50"
                  Height="50"
                  Margin="4"
                  HorizontalContentAlignment="Center"
                  VerticalContentAlignment="Center"
                  FontSize="16" />
                <TextBox
                  x:Name="txt6"
                  Width="50"
                  Height="50"
                  Margin="4"
                  HorizontalContentAlignment="Center"
                  VerticalContentAlignment="Center"
                  FontSize="16" />
                <TextBox
                  x:Name="txt7"
                  Width="50"
                  Height="50"
                  Margin="4"
                  HorizontalContentAlignment="Center"
                  VerticalContentAlignment="Center"
                  FontSize="16" />
            </UniformGrid>


            <!--  Knappar  -->
            <StackPanel
              Grid.Row="2"
              Margin="5,0,0,12"
              Orientation="Horizontal">

                <Button
                  x:Name="btnCheck"
                  Width="120"
                  Height="36"
                  Margin="0,0,8,0"
                  Click="OnCheckClick"
                  Content="Rätta min rad" />
                <Button
                  x:Name="btnClear"
                  Width="100"
                  Height="36"
                  Click="OnClearClick"
                  Content="Rensa" />
            </StackPanel>

            <!--  Resultat  -->
            <StackPanel
              Grid.Row="3"
              Margin="5"
              Orientation="Vertical">
                <TextBlock
                  Margin="0,0,0,8"
                  FontWeight="Bold"
                  Text="Resultat:" />
                <TextBlock
                  x:Name="txtUserRow"
                  Margin="0,0,0,4"
                  FontSize="14"
                  Text="Din rad:" />
                <TextBlock
                  x:Name="txtDrawRow"
                  Margin="0,0,0,4"
                  FontSize="14"
                  Text="Vinnarrad:" />
                <TextBlock
                  x:Name="txtMatches"
                  Margin="0,8,0,0"
                  FontSize="14"
                  FontWeight="SemiBold" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
