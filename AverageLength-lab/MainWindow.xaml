<Window
    x:Class="AverageLength_lab.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AverageLength_lab"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Medellängd av ord"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Margin="25,20,20,0">
        <StackPanel Orientation="Vertical">
            <Label Content="Skriv mening" />
            <TextBox
                x:Name="txtSentence"
                Width="150"
                Height="150"
                Margin="5"
                HorizontalAlignment="Left"
                TextWrapping="Wrap" />
            <Button
                x:Name="btnValidate"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="OnValidateClick"
                Content="Kontrollera text" />
        </StackPanel>

    </Grid>
</Window>
