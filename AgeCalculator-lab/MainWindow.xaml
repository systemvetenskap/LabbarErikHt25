<Window
    x:Class="AgeCalculator_lab.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AgeCalculator_lab"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Ålderskalkylatorn"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="25">
            <Label Padding="5" Content="Ange födelseår" />
            <TextBox
                x:Name="txtAge"
                Width="70"
                Height="30"
                Margin="5"
                HorizontalAlignment="Left"
                FontSize="20" />
            <Button
                x:Name="btnCalculate"
                Width="80"
                Margin="5"
                HorizontalAlignment="Left"
                Click="OnCalculateClick"
                Content="Beräkna ålder" />
            <Label
                x:Name="lblResult"
                Width="350"
                Height="100"
                HorizontalAlignment="Left"
                Content="Här visar du resultatet"
                FontSize="25" />
        </StackPanel>
    </Grid>
</Window>
