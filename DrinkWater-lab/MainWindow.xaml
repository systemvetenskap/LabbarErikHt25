<Window
    x:Class="DrinkWater_lab.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DrinkWater_lab"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            Width="500"
            Margin="5,35,5,0"
            Orientation="Vertical">
            <Label Content="Antal timmar" />
            <TextBox
                x:Name="txtHours"
                Width="150"
                Margin="5"
                Padding="5"
                HorizontalAlignment="Left" />
            <Button
                x:Name="btnCalulate"
                Margin="5"
                HorizontalAlignment="Left"
                Content="Beräkna" Click="OnButtonCalculateClick" />
        </StackPanel>

    </Grid>
</Window>
